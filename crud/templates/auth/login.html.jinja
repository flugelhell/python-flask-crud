{% extends 'base.html.jinja' %}

{% block title %}
Login | SARINAH
{% endblock %}


{% block content %}
<div class="login-container bg-secondary">
    <div class="d-flex justify-content-center align-items-center vh-100">
        <div class="login-box shadow bg-body rounded-2">
            <div class="p-3 text-center bg-success bg-gradient rounded-top text-light"><strong>LOGIN SARINAH</strong>
            </div>
            <form class="p-3 pt-3 bg-light bg-gradient rounded-bottom" method="post">
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" class="form-control" id="username" name="username" required>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" name="password" required>
                </div>
                <div class="d-flex align-items-center d-flex justify-content-between">
                    <button type="submit" class="btn btn-success bg-gradient">Login</button>
                    <a href="#" class="link-primary">Register</a>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}